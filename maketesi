#!/bin/bash

function clearEnv(){
	echo "Pulizia ambiente di compilazione"
	rm *~ *.aux *.dvi *.log *.pdf *.bbl *.blg *.toc *.out tesi-frn.tex
	rm ../graphics/*-converted-to.pdf
}

src_dir=tex/
name='tesi'

cd tex

if [ "$1" = "-c" ]; then
	clearEnv
	exit 0
fi

clearEnv

latex -shell-escape "$name.tex"
bibtex "$name"
latex -shell-escape "$name.tex"
latex -shell-escape "$name.tex"

pdflatex -shell-escape "$name-frn.tex"
pdflatex -shell-escape "$name.tex"

mv "$name.pdf" ../

exit 0
